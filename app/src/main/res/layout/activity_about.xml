<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.vero.About">


    <include android:id="@+id/miActionBar3"
        layout="@layout/actionbar"> </include>


    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cvImagenPerfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        card_view:cardCornerRadius="@dimen/card_esquinas"
        android:layout_below="@+id/miActionBar3"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/left">

            <TextView
                android:id="@+id/tvDeveloper"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/left"
                android:gravity="center_horizontal"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:text="VerÃ³nica Sosa"
                android:textSize="@dimen/nombre_cardview"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvLinea1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvDeveloper"
                android:layout_centerHorizontal="true"
                android:paddingLeft="@dimen/left"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:text="Android 8.0"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/tvLinea2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvLinea1"
                android:layout_centerHorizontal="true"
                android:paddingLeft="@dimen/left"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:text="   "
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/tvLinea3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvLinea2"
                android:layout_centerHorizontal="true"
                android:paddingLeft="@dimen/left"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:text="Tarea Semana 4"
                android:textAppearance="?android:attr/textAppearanceLarge" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>
